<div class="devise-container d-flex justify-content-center align-items-center">
  <div class="devise-form">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <div class="mb-3">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
        </div>
        <div class="mb-3">
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
        </div>
        <div class="mb-3">
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

      </div>

      <div class="form-actions">
        <%= f.button :submit, "Login", class: 'btn-green' %>
      </div>
    <% end %>

    <div class="links d-flex justify-content-between pt-1">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

