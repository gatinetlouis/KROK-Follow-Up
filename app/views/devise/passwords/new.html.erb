<div class="devise-container d-flex justify-content-center align-items-center">
  <div class="devise-form">
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <div class="mb-3">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
        </div>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Send me reset email", class: 'btn-green' %>
      </div>
    <% end %>

    <div class="links d-flex justify-content-between pt-1">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
