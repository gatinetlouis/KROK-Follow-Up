
<div class="border-bottom">
  <h3> <%= supermarcket["name"] %> </h3>
  <div class="d-flex">
  <p class="mr-1"> <%= supermarcket["rating"] %> </p>
  <i class="fas fa-star mr-2 mt-1 text-warning"></i>
  <p class="mr-2 text-secondary">(<%= supermarcket["user_ratings_total"]%>)</p>
  </div>
</div>
<div class="d-flex mt-2">
<i class="fas fa-map-pin mr-3 mt-2"></i>
<p> <%= supermarcket["formatted_address"] %></p>
</div>

<div class="d-flex">
  <% unless supermarcket["opening_hours"].nil? %>
    <% if supermarcket["opening_hours"]["open_now"]%>
      <i class="fas fa-door-open mr-2 mt-1"></i>
      <p> Open </p>
    <% else %>
      <i class="fas fa-door-closed mr-2 mt-1"></i>
      <p> Close </p>
    <% end %>
  <% end %>
</div>
