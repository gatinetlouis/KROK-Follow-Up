<div class="circle-icon">
  <% if current_user.nil? %>
    <%= link_to new_user_session_path do %>
      <i class="far fa-heart btn-heart"></i>
    <% end %>
  <% else %>
    <% if recipe.liked?(current_user) %>
      <%= link_to liked_recipe_path(LikedRecipe.find_by(recipe: recipe, user: current_user)), method: :delete do %>
        <i class="fas fa-heart btn-heart"></i>
      <% end %>
    <% else %>
      <%= link_to recipe_liked_recipes_path(recipe), method: :post do %>
        <i class="far fa-heart btn-heart"></i>
      <% end %>
    <% end %>
  <% end %>
</div>
