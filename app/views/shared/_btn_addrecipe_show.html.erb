<% if current_user.nil? %>
  <div class="circle-add-recipe">
    <%= link_to new_user_session_path do %>
      <i class="fas fa-utensils btn-add-recipe" id ="recipe-show-btn-add"></i>
    <% end %>
  </div>
<% else %>
  <% if recipe.added?(current_user) %>
    <div class="circle-add-recipe circle-add-recipe-cliked">
      <%= link_to planner_planner_recipe_path(current_user.planners.last, PlannerRecipe.find_by(recipe: recipe, planner: current_user.planners.last)), method: :delete do %>
        <i class="fas fa-utensils btn-add-recipe btn-add-recipe-cliked" id ="recipe-show-btn-add"></i>
      <% end %>
    </div>
  <% else %>
    <div class="circle-add-recipe">
      <%= link_to recipe_planner_recipes_path(recipe), method: :post do %>
        <i class="fas fa-utensils btn-add-recipe" id ="recipe-show-btn-add"></i>
      <% end %>
    </div>
  <% end %>
<% end %>

