<div class="liked_recipe_card d-flex mb-5">
  <div>
    <%= link_to recipe_path(liked_recipe.recipe) do  %>
      <%= cl_image_tag liked_recipe.recipe.photo.key %>
    <% end %>
  </div>
  <div class="ml-2">
    <div class="card-title d-flex justify-content-between">
      <%= link_to recipe_path(liked_recipe.recipe), class: 'text-decoration-none mr-2' do  %>
        <h6><%= liked_recipe.recipe.name.truncate(40) %></h6>
      <% end %>
      <%= link_to liked_recipe_path(liked_recipe), method: :delete do %>
        <i class="fas fa-times btn-cross"></i>
      <% end %>
    </div>
    <div class="card-text">
      <div class="icons-card-liked d-flex">
        <% if liked_recipe.recipe.avg_rating == 5 %>
          <p><i class="fas fa-star mr-1 icon-star"></i><%= liked_recipe.recipe.avg_rating %></p>
        <% elsif liked_recipe.recipe.avg_rating == 0 %>
          <p><i class="far fa-star mr-1 icon-star"></i> <%= liked_recipe.recipe.avg_rating %></p>
        <% else %>
          <p><i class="fas fa-star-half-alt mr-1 icon-star"></i><%= liked_recipe.recipe.avg_rating %></p>
        <% end %>
        <p class="ml-3"><i class="fas fa-utensils btn-add-recipe"></i> <%= liked_recipe.recipe.ratings.size %></p>
      </div>
      <%= link_to 'Add to planner', recipe_planner_recipes_path(liked_recipe.recipe), method: :post, class: 'btn-green text-decoration-none' %>
    </div>
  </div>
</div>
