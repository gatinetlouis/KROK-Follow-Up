<div class="container">
  <h3 class="mt-1 liked-recipe-title">My Star Recipes</h3>
  <%= render 'shared/search_box' %>
  <div class="dish-type-nav">
    <ul class="nav d-flex justify-content-center">
      <li class="nav-item flex-grow-1">
        <button class="btn w-100" id="btn-starter">STARTER</button>
      </li>
      <li class="nav-item flex-grow-1">
        <button class="btn w-100 btn-liked-active" id="btn-main">MAIN</button>
      </li>
      <li class="nav-item flex-grow-1">
        <button class="btn w-100" id="btn-dessert">DESSERT</button>
      </li>
    </ul>
  </div>

  <div class="row">
    <div class="col-sm-12 col-lg-6">

      <div class="liked-recipes-main">
        <% if @liked_recipes.select { |r| r.recipe.dish_type == "Main Course" }.blank? %>
          <div class="no-liked-recipe">
            <p class="text-black-50">Find your star recipes!</p>
            <%= link_to "Discover", recipes_path, class: 'btn-green' %>
          </div>
        <% else %>
          <% @liked_recipes.each do |liked_recipe| %>
            <% if liked_recipe.recipe.dish_type == "Main Course" %>
              <!-- card design -->
              <%= render 'liked_recipes/shared/card_liked', liked_recipe: liked_recipe %>
              <!-- card design -->
            <% end %>
          <% end %>
        <% end %>
      </div>

      <div class="liked-recipes-starter d-none">
        <% if @liked_recipes.reject { |r| r.recipe.dish_type == "Main Course" || liked_recipe.recipe.dish_type == "Dessert" }.blank? %>
          <div class="no-liked-recipe">
            <p class="text-black-50">Find your star recipes!</p>
            <%= link_to "Discover", recipes_path, class: 'btn-green' %>
          </div>
        <% else %>
          <% @liked_recipes.each do |liked_recipe| %>
            <% unless liked_recipe.recipe.dish_type == "Main Course" || liked_recipe.recipe.dish_type == "Dessert" %>
              <!-- card design -->
              <%= render 'liked_recipes/shared/card_liked', liked_recipe: liked_recipe %>
              <!-- card design -->
            <% end %>
          <% end %>
        <% end %>
      </div>

      <div class="liked-recipes-dessert d-none">
        <% if @liked_recipes.select { |r| r.recipe.dish_type == "Dessert" }.blank? %>
          <div class="no-liked-recipe">
            <p class="text-black-50">Find your star recipes!</p>
            <%= link_to "Discover", recipes_path, class: 'btn-green' %>
          </div>
        <% else %>
          <% @liked_recipes.each do |liked_recipe| %>
            <% if liked_recipe.recipe.dish_type == "Dessert" %>
              <!-- card design -->
              <%= render 'liked_recipes/shared/card_liked', liked_recipe: liked_recipe %>
              <!-- card design -->
            <% end %>
          <% end %>
        <% end %>

      </div>

    </div>
  </div>


</div>
